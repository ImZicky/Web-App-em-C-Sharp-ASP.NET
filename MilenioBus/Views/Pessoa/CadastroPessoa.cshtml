

<div class="container-fluid capa capa-cadastrar">
    <div class="tit-div mb-5">
        <h2 class="title"><a class="border-top border border-light border-left rounded">_ @ViewData["Title"] _ </a></h2>
    </div>
</div>
<h5 class="text-light text-center text-capitalize mb-1 mt-1 nav-link w-100 bg-dark">formulário</h5>
<main class="container-fluid w-100 mt-3 mb-5">
    <div class="container">
        @{

            if (@ViewData["Resp"] != null)
            {

                if (@ViewData["Resp"].Equals(true))
                {
                    <div class="alert alert-success" role="alert">
                        Pessoa Salva no Banco com SUCESSO :) !
                    </div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        Infelizmente algo deu errado :<
                    </div>

                }
            }
        }
        <form id="form" asp-action="CadastrandoPessoa" asp-controller="pessoa" method="post">
            <div class="form-group col-md-6 float-left">
                <label for="nome" id="lblNome"></label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" required autofocus autocomplete="off">
            </div>
            <div class="form-group col-md-6 float-left">
                <label for="email" id="lblEmail"></label>
                <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" required autofocus autocomplete="off">
            </div>
            <div class="form-group col-md-10 float-left">
                <label for="logradouro" id="lblLogradouro"></label>
                <input type="text" class="form-control" id="logradouro" name="logradouro" placeholder="Logradouro" required autofocus autocomplete="off">
            </div>
            <div class="form-group col-md-2 float-left">
                <label for="numero" id="lblNumero"></label>
                <input type="number" min="1" class="form-control" id="numero" name="numero" placeholder="numero" required autofocus autocomplete="off">
            </div>
            <div class="form-group col-md-3 float-left">
                <label for="complemento" id="lblComplemento"></label>
                <input type="text" class="form-control" id="complemento" name="complemento" placeholder="Complemento" required autofocus autocomplete="off">
            </div>
            <div class="form-group col-md-3 float-left">
                <label for="bairro" id="lblBairro"></label>
                <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Bairro" autofocus autocomplete="off">
            </div>
            <div class="form-group col-md-3 float-left">
                <label for="cidade" id="lblCidade"></label>
                <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Cidade" autofocus autocomplete="off">
            </div>
            <div class="form-group col-md-3 float-left">
                <label for="cep" id="lblCep"></label>
                <input type="text" class="form-control" id="cep" name="cep" placeholder="CEP" autofocus autocomplete="off">
            </div>

            <div class="form-group col-md-3 float-left mt-3">
                <button type="button" id="validacao" class="btn">Analisar</button>
                <button id="envio" type="submit" class="btn" disabled>Confirmar Envio</button>
            </div>
        </form>
    </div>
</main>
